<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/splash_fragment">
    <fragment
        android:id="@+id/splash_fragment"
        android:name="com.github.jeffersonrojas.myarchapp.presentation.fragments.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_to_dashboard"
            app:destination="@id/nav_graph_dashboard"
            app:popUpTo="@+id/nav_graph_main" />
    </fragment>
    <include app:graph="@navigation/nav_graph_dashboard" />
</navigation>
